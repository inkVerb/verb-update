#!/bin/bash
# These are options that are included in all getopts loops for .ink files

while getopts "${optSerf}" Flag; do
 case "${Flag}" in

# CLI script output
c)
  SOcli="true"
;;
# Verbose (no log) option
v)
  SOverbose="true"
;;
# Help
h)
  SOh="true"
;;
# Richtext
r)
  richtext="true"
;;
*)
  inkFail
;;

esac
done
