#!/bin/sh
#inkVerbSerf! verb.ink

# This sets an email alias to 'inactive' in the inkvmail database

# How to use:
## ./inkvmailoffalias [ emal alias ]

usagenotes="This sets an emal alias to 'inactive' in the inkvmail database"
usageformat="inkvmailoffalias [ emal alias ]"
usageexample="inkvmailoffalias john@inkisaverb.com"
hierarchy=( primary )
vsetnames=( "Email" )
vsettypes=( isEmail )
voptnames=(  )
vopttypes=(  )
voptflags=(  )
voptflagpurpose=(  )
dependencyinstall=( inkvmailinstall )
prerequesite=( inkvmailalias )
usedby=(  )
useserfs=(  )
useconfigs=( sitemailpath )
if [ -n "infoINKonly" ] && [ "infoINKonly" = "true" ]; then return 0; fi # Must have for proper usage to not run the full serf
if [ -e "/opt/verb/mods/inkvmailoffalias.replace" ]; then . /opt/verb/mods/inkvmailoffalias.replace; return 0; fi # Precedes this script
if [ -e "/opt/verb/mods/inkvmailoffalias.before" ]; then . /opt/verb/mods/inkvmailoffalias.before; return 0; fi # Replaces this script


# Check to see if inkvmail is installed
. /opt/verb/conf/sitemailpath
if [ "$SITEMAILSTATUS" != "VMAIL_SERVER" ]; then
  /bin/echo "Vmail not installed, not adding $domain to PFA"
  exit 0; fi

address="$1"

# Run the update
/usr/bin/mysql --defaults-extra-file=/opt/verb/conf/mysqldb.inkvmail.cnf -e "UPDATE alias SET active=0, modified=CURRENT_TIMESTAMP WHERE address='$address';"

# Finish
/bin/echo "Email alias $address set to inactive"




if [ -e "/opt/verb/mods/inkvmailoffalias.after" ]; then . /opt/verb/mods/inkvmailoffalias.after; fi # Follows this script
